import pygame
import requests

pygame.init()

screen = pygame.display.set_mode((600, 400))
api_server = "https://static-maps.yandex.ru/1.x"  # Исправленный URL API

lon = 37.677751
lat = 55.757718
delta = 0.016457
delta1 = 0.001
delta2 = 0.5
move_step = 0.01
apikey = "ваш_api_ключ"  # Замените на ваш действительный API-ключ
theme = "map"

def load_map():
    params = {
        "ll": f"{lon},{lat}",
        "spn": f"{delta},{delta}",
        "l": theme,
        "apikey": apikey,  # Исправлено на "apikey" (возможно, в API требуется именно так)
    }
    try:
        response = requests.get(api_server, params=params)
        print("Запрос отправлен:", response.url)  # Отладочная информация
        if response.status_code == 200:
            with open("map.png", "wb") as file:
                file.write(response.content)
            return pygame.image.load("map.png")
        else:
            print(f"Ошибка загрузки карты: {response.status_code}")
            print(response.text)  # Вывод текста ошибки от API
            return None
    except Exception as e:
        print(f"Ошибка при выполнении запроса: {e}")
        return None

map_image = load_map()
if map_image is None:
    print("Не удалось загрузить карту. Проверьте параметры и подключение к интернету.")
    pygame.quit()
    exit()

running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_PAGEUP:
                delta = min(delta * 1.5, delta2)
                map_image = load_map()
            if event.key == pygame.K_PAGEDOWN:
                delta = max(delta / 1.5, delta1)
                map_image = load_map()
            if event.key == pygame.K_UP:
                lat += move_step
                if lat > 85:
                    lat = 85
                map_image = load_map()
            if event.key == pygame.K_DOWN:
                lat -= move_step
                if lat < -85:
                    lat = -85
                map_image = load_map()
            if event.key == pygame.K_LEFT:
                lon -= move_step
                if lon < -180:
                    lon = -180
                map_image = load_map()
            if event.key == pygame.K_RIGHT:
                lon += move_step
                if lon > 180:
                    lon = 180
                map_image = load_map()
            if event.key == pygame.K_t:
                theme = "skl" if theme == "map" else "map"
                map_image = load_map()

    if map_image is not None:
        screen.blit(map_image, (0, 0))
    pygame.display.flip()

pygame.quit()
